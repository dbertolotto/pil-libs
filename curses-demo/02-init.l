(load "../curses.l")

(de init-demo ()
  (let (stdscr (initscr))
    (raw)
    (keypad stdscr T)
    (noecho))
  (printw "Type any character to see it in bold\n")
  (let (ch (getwch))
    (if (= (char ch) "q")
      (printw "q key pressed")
      (prog
        (printw "The pressed key is ")
        (attron aBold)
        (printw (char ch))
        (attroff aBold)
        (printw " (code: %d)" ch)
        )))
  (refresh)
  (getch)
  (endwin)
  (bye))

(init-demo)
